<div class="modal fade" id="newPatientModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">New Patient</h4>
      </div>
      <%= form_for(patient, remote: true, :url => {:controller => 'patients', :action => 'create'}, :html => { :id => "new_patient_form" }) do |f| %>
        <div class="modal-body">          
          <% if patient.errors.any? %>
            <ul class="Signup_Errors">
              <% for message_error in patient.errors.full_messages %>
                <li> <%= message_error %></li>
              <% end %>
            </ul>
          <% end %>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-1"></div>
            <div class="col-xs-12 col-sm-4 col-md-3" >
              <%= f.label :name, "Name" %>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-7">
              <%= f.text_field :name, id: 'patientName', class: 'form-control'%>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-1"></div>
          </div>
          <br/>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-1"></div>
            <div class="col-xs-12 col-sm-4 col-md-3" >
              <%= f.label :address, "Address" %>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-7">
              <%= f.text_field :address , class: 'form-control'%>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-1"></div>
          </div>
          <br/>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-1"></div>
            <div class="col-xs-12 col-sm-4 col-md-3" >
              <%= f.label :gender, "Gender" %>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-7">
              <label><%= f.radio_button :gender, 'male', :checked => true %> Male </label>
              <label><%= f.radio_button :gender, 'female' %> Female </label>
              <label><%= f.radio_button :gender, 'unspecified' %> Unspecified</label>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-1"></div>
          </div>
          <br/>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-1"></div>
            <div class="col-xs-12 col-sm-4 col-md-3" >
              <%= f.label :dob, "Date of Birth" %>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-7">
              <div class="input-group input-medium date date-picker" data-date="12-02-2012" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                <%= f.text_field :dob, class: 'form-control hasDatepicker'%>
                <span class="input-group-btn">
                  <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                </span>
              </div>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-1"></div>
          </div>
          <br/>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-1"></div>
            <div class="col-xs-12 col-sm-4 col-md-3" >
              <%= f.label :pincode, "Pincode" %>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-7">
              <%= f.text_field :pincode, value: "", class: 'form-control' %>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-1"></div>
          </div>
          <br/>
        </div>
        <div class="modal-footer">
          <%= f.submit :Create, class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>