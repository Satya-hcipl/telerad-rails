<%= stylesheet_link_tag "sessions", :media => "all" %>
<%= javascript_include_tag 'sessions', 'data-turbolinks-track' => true %>

<!-- BEGIN SIDEBAR TOGGLER BUTTON -->
<div class="menu-toggler sidebar-toggler">
</div>
<!-- END SIDEBAR TOGGLER BUTTON -->
<!-- BEGIN LOGO -->
<div class="logo">
  <a href="index.html">
  <%= image_tag "logo.png" %>
  </a>
</div>
<!-- END LOGO -->
<!-- BEGIN LOGIN -->
<div class="content">
  <!-- BEGIN LOGIN FORM -->
  <%= form_for(:session, url: login_path, remote: true, :class => 'login-form') do |f| %>
  <h3 class="form-title">Sign In</h3>
  <div class="alert alert-danger display-hide">
      <button class="close" data-close="alert"></button>
      <span>
      Enter any username and password. </span>
  </div>
  <div class="form-group">
    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
    <label class="control-label visible-ie8 visible-ie9">Username</label>
    <%= f.text_field :gateway, :class => "form-control form-control-solid placeholder-no-fix", :autocomplete => "off", :placeholder => "Username" %>
    <label class="control-label visible-ie8 visible-ie9">Password</label>
    <%= f.password_field :password, :class => "form-control form-control-solid placeholder-no-fix", :autocomplete => "off", :placeholder => "Password" %>
    <%= submit_tag "LogIn", class: "btn btn-primary uppercase" %>
  </div>
<% end %>

  <!-- END LOGIN FORM -->
  <!-- BEGIN FORGOT PASSWORD FORM -->
  <form class="forget-form" action="index.html" method="post">
    <h3>Forget Password ?</h3>
    <p>
       Enter your e-mail address below to reset your password.
    </p>
    <div class="form-group">
      <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Email" name="email"/>
    </div>
    <div class="form-actions">
      <button type="button" id="back-btn" class="btn btn-default">Back</button>
      <button type="submit" class="btn btn-success uppercase pull-right">Submit</button>
    </div>
  </form>
  <!-- END FORGOT PASSWORD FORM -->
  
</div>
<div class="copyright">
   2014 &copy; Telehealthindia.com | All Rights Reserved.
</div>
<!-- END LOGIN -->

<script>
  $('.login-form input').keypress(function(e) {
    if (e.which == 13) {
      if ($('.login-form').validate().form()) {
        $('.login-form').submit(); //form validation success, call ajax form submit
      }
    return false;
    }
  });
</script>
